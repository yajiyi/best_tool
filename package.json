{
  "name": "best_tool",
  "version": "2.0.0",
  "description": "拔萃实验机房最好的工具箱",
  "main": "index.js",
  "scripts": {
    "start": "chcp 65001 & electron .",
    "build": "npm run build:electron",
    "build:enable": "g++ -shared -o displayAffinity/enable.dll displayAffinity/enable.cpp",
    "build:disable": "g++ -shared -o displayAffinity/disable.dll displayAffinity/disable.cpp",
    "build:injector": "g++ -o displayAffinity/injector.exe displayAffinity/injector.cpp",
    "build:getAffinity": "g++ -o displayAffinity/getAffinity.exe displayAffinity/getAffinity.cpp",
    "build:electron": "electron-builder --win"
  },
  "author": "yajiyi",
  "license": "GPL-3.0-only",
  "build": {
    "appId": "com.yajiyi.best_tool",
    "productName": "Best Tool",
    "files": [
      "**/*"
    ],
    "extraFiles": [
      {
        "from": "displayAffinity/",
        "to": "displayAffinity/",
        "filter": [
          "**/*.exe",
          "**/*.dll"
        ]
      }
    ],
    "portable": {
      "requestExecutionLevel": "admin"
    },
    "win": {
      "icon": "icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  }
}